{
    "name": "cyber-boost/tusktsk",
    "description": "Next-generation configuration language with built-in intelligence and @ operators",
    "type": "library",
    "license": "BBL-1.0",
    "authors": [
        {
            "name": "Bernard Stepgen Gengel II",
            "email": "hello@tuskt.sk",
            "role": "Creator/Founder"
        }
    ],
    "homepage": "https://tuskt.sk",
    "support": {
        "issues": "https://github.com/cyber-boost/tusktsk/issues",
        "source": "https://github.com/cyber-boost/tusktsk",
        "docs": "https://docs.tuskt.sk"
    },
    "keywords": [
        "tusklang",
        "tusk",
        "configuration",
        "dsl",
        "automation",
        "devops",
        "infrastructure"
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "TuskLang\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TuskLang\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "stan": "phpstan analyse",
        "cs": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 